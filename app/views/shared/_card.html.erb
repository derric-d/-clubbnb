 <div class="row">
  <% @flats.each do |flat| %>
  <div class="col-md-3">
    <div class="card-flat my-3">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg">
      <div class="card-flat-infos">
        <div id="card-rating">
          <p><%= flat.city.upcase %></p>
          <h2><%= flat.title %></h2>
          <%#= raise %>
          <% flat.average_rating.times do %>
          <i class="fas fa-star"></i>
          <% end %> <%if flat.sum_rating == 0 %>
          <p><em>No ratings yet</em></p>
          <% else%> <%=  flat.sum_rating  %>
          <% end  %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
