    <div class="card-flat-dashboard m-2">
      <%= cl_image_tag flat.photo %>
      <div class="card-flat-dashboard-infos">
        <div id="card-dashboard-rating">
          <p><%#= link_to flat.city.upcase, flat_path(flat) %></p>
          <h2><%= link_to flat.title, flat %></h2>

          <% flat.average_rating.times do %>
          <i class="fas fa-star"></i>
          <% end %> <%if flat.sum_rating == 0 %>
          <p><em>No ratings yet</em></p>
          <% else%> <%=  flat.sum_rating  %>
          <% end  %>
