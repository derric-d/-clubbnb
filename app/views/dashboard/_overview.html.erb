<div class="list-margin">
    <div class="dashboard" >
      <h3 style="text-align:left;">Welcome back, <%= @user.first_name %>.</h3><br>
      <p>Your activities:</p>
      <table style="width:100%">
        <tr>
          <th><i class="fas fa-home"></i></th>
          <td>
            <% if @user.flats.count == 0  %>
            <p>You currently don't offer any homes to stay. Do you want to become a host? <%= link_to "Click here to become a host.", new_flat_path %></p>
            <% else %>
            <p>You currently offer <%= pluralize @user.flats.size, "flat" %>. </p>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><i class="fas fa-suitcase"></i></th>
          <td>
            <% if @current_user.bookings.nil?  %>
            <p><%= link_to "Time to plan your next trip.", root_path %></p>
            <% else %>
            <p>You have <%= @current_user.bookings.count %> upcoming trips.</p>
            <% end %></td>
          </tr>
        </table>
      </div>
    </div>